<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:gravity="bottom"
    tools:showIn="@layout/activity_add_exercise"
    android:padding="10dp">

    <TextView
        android:id="@+id/set_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/d_set"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/set_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:gravity="center"
        android:textSize="22sp"
        tools:text="20" />

    <TextView
        android:id="@+id/set_reps_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_reps"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/set_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="2"
        android:gravity="center"
        android:textSize="22sp"
        tools:text="100" />

    <TextView
        android:id="@+id/set_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/kg"
        android:textSize="18sp" />

</LinearLayout>